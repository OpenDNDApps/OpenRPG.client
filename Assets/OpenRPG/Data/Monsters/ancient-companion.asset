  AsJson: "{\"name\":\"Ancient Companion\",\"source\":\"UA2021MagesOfStrixhaven\",\"page\":3,\"size\":[\"M\"],\"type\":\"construct\",\"alignment\":[\"A\"],\"ac\":[{\"special\":\"14
