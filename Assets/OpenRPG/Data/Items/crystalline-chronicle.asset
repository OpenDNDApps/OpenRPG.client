  AsJson: '{"name":"Crystalline Chronicle","source":"TCE","page":124,"rarity":"very
    rare","reqAttune":"by a wizard","reqAttuneTags":[{"class":"wizard"}],"wondrous":true,"weight":3,"recharge":"dawn","rechargeAmount":"{@dice
